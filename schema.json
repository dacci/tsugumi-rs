{
  "type": "object",
  "required": [
    "metadata"
  ],
  "additionalProperties": false,
  "properties": {
    "metadata": {
      "$ref": "#/definitions/Metadata"
    },
    "rendition": {
      "$ref": "#/definitions/Rendition"
    },
    "chapter": {
      "oneOf": [
        {
          "$ref": "#/definitions/Chapter"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Chapter"
          }
        }
      ]
    }
  },
  "definitions": {
    "Metadata": {
      "type": "object",
      "required": [
        "title",
        "language",
        "identifier"
      ],
      "additionalProperties": false,
      "properties": {
        "title": {
          "oneOf": [
            {
              "type": "array",
              "minItems": 1,
              "items": {
                "oneOf": [
                  {
                    "$ref": "#/definitions/Title"
                  },
                  {
                    "type": "string"
                  }
                ]
              }
            },
            {
              "oneOf": [
                {
                  "$ref": "#/definitions/Title"
                },
                {
                  "type": "string"
                }
              ]
            }
          ]
        },
        "creator": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "oneOf": [
                  {
                    "$ref": "#/definitions/Creator"
                  },
                  {
                    "type": "string"
                  }
                ]
              }
            },
            {
              "oneOf": [
                {
                  "$ref": "#/definitions/Creator"
                },
                {
                  "type": "string"
                }
              ]
            }
          ]
        },
        "contributor": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "oneOf": [
                  {
                    "$ref": "#/definitions/Creator"
                  },
                  {
                    "type": "string"
                  }
                ]
              }
            },
            {
              "oneOf": [
                {
                  "$ref": "#/definitions/Creator"
                },
                {
                  "type": "string"
                }
              ]
            }
          ]
        },
        "collection": {
          "oneOf": [
            {
              "$ref": "#/definitions/Collection"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Collection"
              }
            }
          ]
        },
        "language": {
          "type": "string"
        },
        "identifier": {
          "type": "string"
        }
      }
    },
    "Title": {
      "type": "object",
      "required": [
        "name"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/TitleType"
        },
        "alternateScript": {
          "type": "string"
        },
        "fileAs": {
          "type": "string"
        }
      }
    },
    "TitleType": {
      "type": "string",
      "enum": [
        "main",
        "subtitle",
        "short",
        "collection",
        "edition",
        "expanded"
      ],
      "default": "main"
    },
    "Creator": {
      "type": "object",
      "required": [
        "name"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "alternateScript": {
          "type": "string"
        },
        "fileAs": {
          "type": "string"
        }
      }
    },
    "Collection": {
      "type": "object",
      "required": [
        "name",
        "type"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/CollectionType"
        },
        "position": {
          "type": "integer"
        }
      }
    },
    "CollectionType": {
      "type": "string",
      "enum": [
        "series",
        "set"
      ]
    },
    "Rendition": {
      "type": "object",
      "required": [],
      "additionalProperties": false,
      "properties": {
        "direction": {
          "$ref": "#/definitions/Direction"
        },
        "layout": {
          "$ref": "#/definitions/Layout"
        },
        "orientation": {
          "$ref": "#/definitions/Orientation"
        },
        "spread": {
          "$ref": "#/definitions/Spread"
        },
        "style": {
          "oneOf": [
            {
              "$ref": "#/definitions/Style"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Style"
              }
            }
          ]
        }
      }
    },
    "Direction": {
      "type": "string",
      "enum": [
        "rtl",
        "ltr"
      ],
      "default": "rtl"
    },
    "Layout": {
      "type": "string",
      "enum": [
        "reflowable",
        "pre-paginated"
      ],
      "default": "pre-paginated"
    },
    "Orientation": {
      "type": "string",
      "enum": [
        "landscape",
        "portrait",
        "auto"
      ],
      "default": "auto"
    },
    "Spread": {
      "type": "string",
      "enum": [
        "none",
        "landscape",
        "both",
        "auto"
      ],
      "default": "auto"
    },
    "Style": {
      "type": "object",
      "required": [
        "href",
        "src"
      ],
      "additionalProperties": false,
      "properties": {
        "link": {
          "type": "boolean"
        },
        "href": {
          "type": "string"
        },
        "src": {
          "type": "string"
        }
      }
    },
    "Chapter": {
      "type": "object",
      "required": [],
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string"
        },
        "page": {
          "oneOf": [
            {
              "$ref": "#/definitions/Page"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Page"
              }
            }
          ]
        },
        "cover": {
          "type": "boolean"
        }
      }
    },
    "Page": {
      "type": "string"
    }
  }
}
